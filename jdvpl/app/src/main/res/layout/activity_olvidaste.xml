<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.juanda.jdvpl.olvidaste">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/logfon"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E1000000"
        >
        <Button
            android:layout_width="26dp"
            android:id="@+id/flecha"
            android:layout_height="24dp"
            android:background="@drawable/regresarflecha"
            android:onClick="find"
            android:layout_margin="12dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:id="@+id/textol"
            android:layout_marginHorizontal="20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/correo"
                android:id="@+id/corolv"
                android:inputType="textEmailAddress"
                android:textSize="25sp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_redonreg"
            android:id="@+id/btnol"
            android:layout_marginTop="20dp"
            android:layout_below="@id/textol"
            android:layout_centerHorizontal="true"
            android:text="@string/recuperar"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/gmail"
            android:layout_below="@+id/btnol"
            android:id="@+id/jeje"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:onClick="lkdjsfjsd"
            />
    </RelativeLayout>

</RelativeLayout>