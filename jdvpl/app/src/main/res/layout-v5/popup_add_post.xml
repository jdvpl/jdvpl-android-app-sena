<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/html5"
        android:padding="5dp"
        android:id="@+id/popup_user_image"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"/>
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/camerapor"
        android:onClick="camara"
        android:layout_below="@+id/popup_img"
        android:background="@drawable/ic_camera_enhance_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:id="@+id/textin1"
        android:layout_below="@+id/popup_img"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="15"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:maxLength="20"
        android:id="@+id/popup_title"
        android:hint="@string/po1"
        android:inputType="textPersonName|textCapWords"
         />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:id="@+id/textin3"
        android:layout_below="@+id/textin2"
        android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="12"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/popup_telefono"
        android:hint="@string/pos2"
        android:inputType="phone"
        />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/textin2"
        android:layout_below="@+id/textin1"
        android:layout_height="wrap_content">
    <com.google.android.material.textfield.TextInputEditText
        android:hint="@string/pos1"
        android:id="@+id/popup_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:inputType="textPersonName"
       />
    </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textin3"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:text="@string/dir1"
            android:textSize="22sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/z1"
        android:layout_below="@+id/direccion">
    <com.google.android.material.textfield.TextInputEditText
        android:hint="Cr, Cl, Dg, Ac, Av"
        android:id="@+id/popup_cr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="4"
        android:maxLength="2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:inputType="textCapWords"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/z2"
        android:layout_toRightOf="@+id/z1"
        android:layout_below="@+id/direccion">
    <com.google.android.material.textfield.TextInputEditText
        android:hint="4"
        android:id="@+id/popup_numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/popup_cr"
        android:ems="2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:maxLength="9"
        android:inputType="textCapWords"
        />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:text="#"
        android:textColor="#fff"
        android:id="@+id/popup_numerall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/z2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="21dp"
        android:textSize="20sp"
        android:layout_below="@+id/direccion"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/z3"
        android:layout_toRightOf="@+id/popup_numerall"
        android:layout_below="@+id/direccion">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/popup_direcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:ems="4"
            android:maxLength="8"
            android:hint="10-37"
            android:inputType="textCapWords" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/z4"
        android:layout_toRightOf="@+id/z3"
        android:layout_below="@+id/direccion">
    <com.google.android.material.textfield.TextInputEditText
        android:hint="@string/dir2"
        android:id="@+id/popup_ciudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="4"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:maxLength="15"
        android:layout_below="@+id/direccion"
        android:inputType="textCapWords"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/z5"
        android:layout_below="@+id/z1">
    <com.google.android.material.textfield.TextInputEditText
        android:hint="@string/dir3"
        android:id="@+id/popup_depart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:maxLength="15"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:inputType="textCapWords"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/z6"
        android:layout_below="@+id/z1"
        android:layout_toRightOf="@+id/z5">
    <com.google.android.material.textfield.TextInputEditText
        android:hint="@string/dir4"
        android:id="@+id/popup_pais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:maxLength="20"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/popup_cr"
        android:layout_toRightOf="@id/popup_depart"
        android:inputType="textCapWords"
        />
    </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/popup_img"
            android:layout_width="match_parent"
            android:layout_marginRight="55dp"
            android:layout_marginLeft="55dp"
            android:layout_centerHorizontal="true"
            android:layout_height="280dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/img"
            android:scaleType="centerCrop" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/popup_add"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/z6"
        android:background="@drawable/circle_bg"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/regedit"
        />
    <ProgressBar
        android:id="@+id/popup_progressBar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        style="?android:attr/progressBarStyle"
        android:layout_below="@+id/z6"
        android:background="@drawable/circle_bg"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        />

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>